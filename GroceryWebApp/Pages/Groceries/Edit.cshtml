@page
@model GroceryWebApp.Pages.Groceries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center heading">Edit Grocery Details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="~/images/grocery.png" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grocery.GroceryID" />
            <div class="form-group">
                <label asp-for="Grocery.GroceryName" class="control-label"></label>
                <input asp-for="Grocery.GroceryName" class="form-control" />
                <span asp-validation-for="Grocery.GroceryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grocery.Price" class="control-label"></label>
                <input asp-for="Grocery.Price" class="form-control" />
                <span asp-validation-for="Grocery.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grocery.CategoryID" class="control-label"></label>
                <select asp-for="Grocery.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                <span asp-validation-for="Grocery.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grocery.BrandID" class="control-label"></label>
                <select asp-for="Grocery.BrandID" class="form-control" asp-items="ViewBag.BrandID"></select>
                <span asp-validation-for="Grocery.BrandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Grocery Details" class="btn btn-primary btn-lg raised round" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
