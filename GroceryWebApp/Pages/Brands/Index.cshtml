@page
@model GroceryWebApp.Pages.Brands.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading">All Brand Details</h1>

<p>
    <a asp-page="Create" class="btn btn-primary btn-lg raised round" >Add New Brand</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand[0].BrandName)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Brand) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary btn-lg raised round"  asp-route-id="@item.BrandID">Edit</a>
                <a asp-page="./Delete" class="btn btn-danger btn-lg raised round" asp-route-id="@item.BrandID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
