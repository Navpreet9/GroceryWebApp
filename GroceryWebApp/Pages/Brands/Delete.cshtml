@page
@model GroceryWebApp.Pages.Brands.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center heading">Delete Brand Details</h1>

<div>
    <h4>Are You Sure to delete this Brand Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.BrandName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Brand.BrandID" />
        <input type="submit" value="Delete Brand Details" class="btn btn-danger btn-lg raised round" />
    </form>
</div>
