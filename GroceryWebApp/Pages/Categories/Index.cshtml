@page
@model GroceryWebApp.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading">All Grocery Category Details</h1>

<p>
    <a asp-page="Create" class="btn btn-primary btn-lg raised round">Add New Grocery Category</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary btn-lg raised round" asp-route-id="@item.CategoryID">Edit</a>
                <a asp-page="./Delete" class="btn btn-danger btn-lg raised round" asp-route-id="@item.CategoryID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>